{% extends "FOSUserBundle::layout.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
<link rel="stylesheet" href="{{ asset('/css/form.css.php') }}" />
{% endblock %}
{% block javascripts %}
  {{ parent() }}
<script src="{{ asset('/js/jquery.infieldlabel.min.js') }}" type="text/javascript" ></script>
<script src="{{ asset('/js/form.js') }}" type="text/javascript" ></script>
{% endblock %}

{% block fos_user_content %}
<div class="signin-form-wrapper form-wrapper" id="signin-form">
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<h2>{{ 'sign in' | title }}</h2>
<br />
<form action="{{ path("fos_user_security_check") }}" method="post">
  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  <p>
    <label for="username">email address</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="text-input" />
  </p>
  <p>
    <label for="password">password</label>
    <input type="password" id="password" name="_password" class="text-input" />
  </p>
  <p>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">remember me</label>
    <input type="submit" id="_submit" name="_submit" value="sign in &raquo;" class="greenButton" />
  </p>
</form>
</div>
<div id="signin-quicklinks-wrapper">
  <h2>{{ 'sign in with' | title }}</h2>
  <ul id="quicklinks">
    <li class="quicklink" id="facebook">{{ facebook_login_button({'autologoutlink': true, 'label': 'Sign In With Facebook'}) }}</li>
    <li class="quicklink" id="twitter"></li>
    <li class="quicklink" id="oauth"></li>
  </ul>
</div>
{% endblock %}
