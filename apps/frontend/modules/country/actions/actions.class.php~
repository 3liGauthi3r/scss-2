<?php

/**
 * country actions.
 *
 * @package    scss
 * @subpackage country
 * @author     Your name here
 * @version    SVN: $Id: actions.class.php 23810 2009-11-12 11:07:44Z Kris.Wallsmith $
 */
class countryActions extends sfActions
{
  public function executeIndex(sfWebRequest $request)
  {
    $cur_pg = $request->getParameter('page',1);
    $max_pg = sfConfig::get('app_max_items_on_index');
    $this->pager = new sfDoctrinePager('ScssCountry',$max_pg);
    $this->pager->setQuery(Doctrine::getTable('ScssCountry')->createQuery('c')->orderBy('c.name ASC'));
    $this->pager->setPage($cur_pg);
    $this->pager->init();
    $this->countries = $this->pager->getResults();
  }

  public function executeShow(sfWebRequest $request)
  {
    $this->scss_country = Doctrine_Core::getTable('ScssCountry')->find(array($request->getParameter('id')));
    $this->forward404Unless($this->scss_country);
  }

  public function executeNew(sfWebRequest $request)
  {
    $this->form = new ScssCountryForm();
  }

  public function executeCreate(sfWebRequest $request)
  {
    $this->forward404Unless($request->isMethod(sfRequest::POST));

    $this->form = new ScssCountryForm();

    $this->processForm($request, $this->form);

    $this->setTemplate('new');
  }

  public function executeEdit(sfWebRequest $request)
  {
    $this->forward404Unless($scss_country = Doctrine_Core::getTable('ScssCountry')->find(array($request->getParameter('id'))), sprintf('Object scss_country does not exist (%s).', $request->getParameter('id')));
    $this->form = new ScssCountryForm($scss_country);
  }

  public function executeUpdate(sfWebRequest $request)
  {
    $this->forward404Unless($request->isMethod(sfRequest::POST) || $request->isMethod(sfRequest::PUT));
    $this->forward404Unless($scss_country = Doctrine_Core::getTable('ScssCountry')->find(array($request->getParameter('id'))), sprintf('Object scss_country does not exist (%s).', $request->getParameter('id')));
    $this->form = new ScssCountryForm($scss_country);

    $this->processForm($request, $this->form);

    $this->setTemplate('edit');
  }

  public function executeDelete(sfWebRequest $request)
  {
    $request->checkCSRFProtection();

    $this->forward404Unless($scss_country = Doctrine_Core::getTable('ScssCountry')->find(array($request->getParameter('id'))), sprintf('Object scss_country does not exist (%s).', $request->getParameter('id')));
    $scss_country->delete();

    $this->redirect('country/index');
  }

  protected function processForm(sfWebRequest $request, sfForm $form)
  {
    $form->bind($request->getParameter($form->getName()), $request->getFiles($form->getName()));
    if ($form->isValid())
    {
      $scss_country = $form->save();

      $this->redirect('country/edit?id='.$scss_country->getId());
    }
  }
}
