{% extends '::base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('/css/passel.css.php') }}" rel="stylesheet" />
{% endblock %}
{% block main_content %}  
<div class="box main-content">
  <div class="box-content datagrid">
  {% block passel_datagrid %}    
    <h2>{{ 'passels' | title }} &nbsp;<a href="{{ path('passel_new') }}"><img src="{{ assets('/images/icons/add-icon.png') }}" height="16" width="16" alt="{{ 'add a passel' | title }}" /></a></h2>
    <table class="data-table" id="passel-table">
    {% block passel_table %}
      <tbody>
      {% for i, entity in entities $}
        <tr class="table-row {{ cycle(['odd-row', 'even-row'], i) }}">
          <td>{{ entity.name | title }}</td>
          <td>{{ entity.type.name | title }}</td>
          <td>{{ entity.region.name | title }} </td>
          <td class="table-controls">
            <div class="table-controls">
              <a href="{{ path('passel_edit', {'passel_slug': entity.slug}) }}"><img src="{{ assets('/images/icons/edit-icon.png') }}" width='16' height='16' alt="{{ 'edit' | title }}" /></a>
              <a href="{{ path('passel_remove', {'passel_slug': entity.slug}) }}"><img src="{{ assets('/images/icons/delete-icon.png') }}" width='16' height='16' alt="{{ 'delete' | title }}" /></a>
            </div>
          </td>
        </tr>
      {% endforeach %}
      </tbody>
      {% block pager %}
      <tfoot>
        <tr>
          <td colspan="4">
            {{ pagerfanta(pagerfanta_inst, 'twitter_bootstrap_translated', {'proximity': 2}) }}
          </td>
        </tr>              
      </tfoot>
      {% endblock %}         
    {% endblock %}
    </table>
  {% endblock %}
  </div>
</div>
{% endblock %}
  