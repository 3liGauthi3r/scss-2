{% extends '::base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('/css/organization.css.php') }}" />
  <link rel="stylesheet" href="{{ asset('/css/datatable.css.php') }}" />
{% endblock %}
{% block main_content %}
<div class="box main-content">
  <div class="box-content datagrid">
  {% block passel_type_datagrid %}
    <h2>{{ passel_type.name | title }}</h2>
    <table class="data-table" id="passel-table">
    {% block passel_type_table %}
      <tbody>
        <tr>
          <td>
            {{ passel_type.passelType.name | title }}
          </td>
        </tr>   
        <tr>
          <td>
            {{ passel_type.description | capitalize }}
          </td>
        </tr>       
        <tr>
          <td>
            {{ passel_type.iso_code | upper }}
          </td>
        </tr>        
      </tbody>
    {% endblock %}
    </table>
  {% endblock %}
  </div>
</div>
{% endblock %}