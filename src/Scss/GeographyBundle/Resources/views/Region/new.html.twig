{# src/Scss/GeographyBundle/Resources/view/Region/new.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
  <link href="{{ asset('/css/region.css.php') }}" rel="stylesheet" />
  <link href="{{ asset('/css/form.css.php') }}" rel="stylesheet" />
  {{ parent() }}
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('/js/region.js') }}" type="text/javascript" />  
  <script src="{{ asset('/js/form.js') }}" type="text/javascript" />  
{% endblock %}
  
{% block main_content %}
  <div id="portfolio-content">
  <form action="{{ path('project_new') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.iso_code) }}
    {{ form_row(form.organization) }}
    {{ form_row(form.logo) }}
    {{ form_row(form.photo) }}
    {{ form_row(form.latitude) }}
    {{ form_row(form.longitude) }}

    {{ form_rest(form) }}

    <input type="submit" />
</form>
  </div>
{% endblock %}
  