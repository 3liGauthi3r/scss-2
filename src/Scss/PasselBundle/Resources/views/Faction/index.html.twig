{% extends '::base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/scssuser/css/Base/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/scsspassel/css/faction.css') }}" rel="stylesheet" />    
{% endblock %}

{% block main_content %}

<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ 'name' | title }}</th>
            <th>{{ 'passel' | title }}</th>
            <th>{{ 'attendees' | title }}</th>
            <th></th>
        </tr>        
    </thead>
    <tbody>
        {% for faction in factions %}
        <tr>
            <td>{{ faction.name }}</td>
            <td>{{ faction.passel }}</td>
            <td>{{ faction.attendeeCount }}</td>
            <td></td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">No factions found.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}