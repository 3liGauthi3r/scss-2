{% extends '::base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/scssuser/css/Base/form.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/scssuser/css/Base/new.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/scsspassel/css/attendee.css') }}" rel="stylesheet" />    
{% endblock %}

{% block main_content %}
    <div id="form-container">
        <fieldset>
            <h2>{{ 'add an attendee' | title }}</h2>
            <form action="{{ path( 'attendee_new' ) }}" method="post" {{ form_enctype( form ) }}>
            {% block form %}
                <div id="form-errors" class="hidden">
                    {{ form_errors( form ) }}
                </div>
                <div class="row-fluid">
                    <div id="left-pane">
                        <div class="slider">
                            {{ form_row( form.first_name ) }}
                        </div>
                        <div class="slider">
                            {{ form_row( form.last_name ) }}
                        </div>
                        <div class="slider">
                            {{ form_row( form.dob ) }}
                        </div>
                        <div class="slider">
                            {{ form_row( form.faction ) }}
                        </div>
                    </div>
                    <div class="right-pane">
                        <div class="slider">
                            {{ form_row( form.email_address ) }}
                        </div>
                        <div class="slider">
                            {{ form_rest(form) }}
                        </div>
                    </div>
                    <div class="slider">
                        <button class="btn btn-primary btn-block" name="submit">{{ 'add' | title }}</button>
                    </div>
                </div>
                {% endblock %}
            </form>
        </fieldset>
    </div>    
{% endblock %}