{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('/bundles/scssutility/css/index.css') }}" rel="stylesheet" />
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/bundles/scssutility/js/scss.js') }}" type="text/javascript" ></script>
{% endblock %}

{% block content %}
<div class="fluid-container">
    {% block signin %}
    <div class="span4">
        {{ form }}
    </div>
    {% endblock %}
    {% block carousel %}
    <div class="span8">
        <div class="carousel slide" id="mainCarousel">
            {% for key, item in carousel.items %}
            <div class="item {{ 'item'~key }}">
                <p class="caption">{{ item.caption }}</p>
            </div>
            {% endfor %}
        </div>
        <a class="carousel-control left" href="#mainCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#mainCarousel" data-slide="next">&rsaquo;</a>
    </div>
    {% endblock %}
    {% block home_cols %}
    <div class="span12">
        <div class="row home-columns">
            <div class="span4 home-column clearfix">
                <i class="icon-th pull-left"></i>
                <div class="content">
                    <h2>Multi-Facility Interface</h2>
                    <p>blah blah blah blah blah!</p>
                </div>
            </div>
            <div class="span4 home-column clearfix">
                <i class="icon-sitemap pull-left"></i>
                <div class="content">
                    <h2>Point And Print Reports</h2>
                    <p>blah blah blah blah blah!</p>
                </div>
            </div>
            <div class="span4 home-column clearfix">
                <i class="icon-picture pull-left"></i>
                <div class="content">
                    <h2>User Portals</h2>
                    <p>blah blah blah blah blah!</p>
                </div>
            </div>
        </div>      
    </div>
    {% endblock %}
</div>
{% endblock %}
