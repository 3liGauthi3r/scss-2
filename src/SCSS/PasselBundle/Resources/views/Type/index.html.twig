{% extends '::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/scssuser/css/Base/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/scsspassel/css/type.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/scssuser/css/Base/datatable.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
<div class="fluid-row">
    <div class="span12">
        <h1>
            {{ 'types' | title }}
            {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path( 'scss_passel_type_new' ) }}" alt="{{ 'add a type' }}">
                <i class="icon-plus on icon-check-empty pull-right"></i>
           </a>
           {% endif %}
        </h1>

        {% block datatable %}
        <table class="table table-striped">
            <tr>
                <th>
                    <a href="#" class="sort-toggle">{{ 'name' | title }}</a>
                </th>
                <th>{{ 'description' | title }}</th>
                <th>{{ 'status' | title }}</th>
                <th>{{ 'category' | title }}</th>
                <td></td>
            </tr>
            {% for type in types %}
            <tr>
                <td><a href="{{ path( 'scss_type_show', { 'slug': type.slug } ) }}">{{ type.name }}</a></td>
                <td>{{ type.shortDescription }}</td>
                <td><a href="{{ path( 'scss_status_show', { 'slug': type.Status.slug } ) }}">{{ type.Status.name }}</a></td>
                <td><a href="{{ path( 'scss_category_show', { 'slug': type.Category.slug } ) }}">{{ type.Category.name }}</a></td>
                {% include 'SCSSUserBundle:Datatable:datatable.controls.html.twig' with { 'slug': type.slug, 'type': 'type' } %}
            </tr>
            {% else %}
            <tr>
                <td colspan="5">
                    <em>{{ 'no types found.' | title }}</em>
                </td>
            </tr>
            {% endfor %}
        </table>
        {% include 'SCSSUserBundle:Datatable:datatable.footer.html.twig' with { 'pager': pager } %}
        {% endblock %}
    </div>
</div>
{% endblock %}
